<%- include("header.ejs") -%>

<body class="text-center">

    <main class="form-signin">
        <form action="/add-user" method="post">
            <img class="mb-4" src="/images/logo.png" alt="" width="72" height="72">
            <h1 class="h3 mb-3 fw-normal">Add Students Here</h1>

            <div class="form-floating">
                <input type="text" class="form-control" id="floatingInput" placeholder="Name" name="name" required>
                <label for="floatingInput">Full Name</label>
            </div>
            <div class="form-floating">
                <input type="text" class="form-control" id="floatingPassword" placeholder="Student ID" name="studentid" required>
                <label for="floatingPassword">Student ID</label>
            </div>

            <button class="w-100 btn btn-lg btn-primary" type="submit">Add</button>
            <p class="mt-5 mb-3 text-muted">&copy; 2021-2022</p>
        </form>
    </main>



</body>

</html>